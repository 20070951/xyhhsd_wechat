.container {
  min-height: 100vh;
  background: #f7f7f7;
}

.user-info {
  position: relative;
  height: 400rpx;
  margin-bottom: 20rpx;
}

.user-info-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 300rpx;
  background: #07C160;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}

.user-info-content {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 60rpx;
}

.avatar-wrapper {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 4rpx solid #fff;
}

.avatar-btn {
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 24rpx;
  color: #07C160;
  background: #fff;
  padding: 6rpx 20rpx;
  border-radius: 24rpx;
  white-space: nowrap;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.avatar-btn::after {
  display: none;
}

.nickname {
  font-size: 32rpx;
  color: #fff;
  margin-bottom: 20rpx;
}

.login-btn {
  font-size: 28rpx;
  color: #07C160;
  background: #fff;
  padding: 12rpx 40rpx;
  border-radius: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.login-btn::after {
  display: none;
}

.section {
  margin-bottom: 20rpx;
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  padding-left: 10rpx;
  border-left: 4rpx solid #07C160;
}

.grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 30rpx;
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.grid-item mp-icon {
  margin-bottom: 10rpx;
}

.grid-item text {
  font-size: 28rpx;
  color: #333;
}

.grid-item .count {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
}

.section mp-cells {
  margin-top: -30rpx;
  margin-left: -30rpx;
  margin-right: -30rpx;
}

.section mp-cell {
  padding: 30rpx !important;
}

.section mp-cell mp-icon {
  margin-right: 20rpx;
  color: #07C160;
} 