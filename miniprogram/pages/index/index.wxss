.container {
  padding: 0;
  background: #f7f7f7;
}

.search-bar {
  padding: 10rpx 30rpx;
  background: #fff;
}

.swiper-container {
  width: 100%;
  height: 300rpx;
  margin-bottom: 20rpx;
}

.swiper {
  width: 100%;
  height: 100%;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.quick-actions {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.action-item text {
  font-size: 24rpx;
  color: #333;
}

.activity-list {
  background: #fff;
  padding: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 4rpx solid #07C160;
}

.activity-items {
  display: flex;
  flex-direction: column;
}

.activity-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.activity-image {
  width: 200rpx;
  height: 150rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.activity-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.activity-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.activity-meta {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.meta-item mp-icon {
  margin-right: 10rpx;
}

.activity-status {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.price {
  color: #f85f48;
  font-size: 28rpx;
  font-weight: bold;
}

.signup-count {
  font-size: 24rpx;
  color: #999;
}

.loading-more {
  text-align: center;
  padding: 20rpx;
} 